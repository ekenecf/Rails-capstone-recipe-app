<h1>Create Recipe</h1>

<%= form_with model: @recipe, url: user_recipes_path, method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :preparation_time %>
  <%= f.number_field :preparation_time  %>
  <%= f.label :cooking_time %>
  <%= f.number_field :cooking_time  %>
  <%= f.label :description %>
  <%= f.text_area :description  %>
  <%= f.check_box :public  %>
  <%= f.label :public %>
  <%= f.submit "Save Recipe" %>
<% end %>