<h1> Public recipes: </h1>

<% @public_recipes.each do |recipe| %>

    <p>Simple dish by: <%= recipe[:recipe_name] %> </p>
    <p>Recipe user_name: <%= recipe[:user].name %> </p>
    <p>Food items: <%= recipe[:food_items] %> </p>
    <p>Total price: <%= recipe[:total_price] %> </p>

<% end %>
 <% @recipes.each do |rec| %>
    <%= link_to "back to recipe details", user_recipes_path(rec.user, rec) %>
 <% end %>
